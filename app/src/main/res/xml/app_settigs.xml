<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="@string/locations">

        <ListPreference
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:defaultValue="3000"
            android:title="@string/tracks"
            app:dialogIcon="@drawable/ic_update_time"
            app:entries="@array/location_time_update_name"
            app:entryValues="@array/location_time_update_value"
            app:icon="@drawable/ic_update_time"
            app:key="update_time_key"
            app:summary="@string/update_time_hint" />
    </PreferenceCategory>
</PreferenceScreen>