<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="materialAlertDialogBodyTextStyle">@style/AlertDialogTextStyle</item>
        <item name="android:background">@color/text_and_button_color</item>

    </style>

    <style name="AlertDialogTextStyle" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:textColor">@color/alert_dialog_color</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontWeight">400</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/alert_dialog_button_text_color</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontWeight">400</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/alert_dialog_button_text_color</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontWeight">400</item>
    </style>

    <style name="save_dialog_edittext">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:paddingTop">17dp</item>
        <item name="android:paddingBottom">18dp</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">@color/tabtextcolor</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/save_dialog_edit_text_back</item>
        <item name="android:textCursorDrawable">@drawable/edit_text_cursor</item>
        <item name="android:hint">@string/playlist_name_hint</item>
        <item name="android:maxLines">1</item>

    </style>
</resources>